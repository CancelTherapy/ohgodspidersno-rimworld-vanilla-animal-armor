<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <ThingDef ParentName="ArmorHelmetMakeableBase">
    <defName>Apparel_CatOfPreyArmor</defName>
    <label>Cat of Prey Armor</label>
    <description>Leather with armor plates covering the body. Protects against gunfire and melee attacks.</description>
    <techLevel>Medieval</techLevel>
  	<recipeMaker>
  		<researchPrerequisite>Smithing</researchPrerequisite>
  		<recipeUsers>
  			<li>ElectricSmithy</li>
  			<li>FueledSmithy</li>
  		</recipeUsers>
  	</recipeMaker>
    <graphicData>
      <texPath>Things/Pawn/Animal/Apparel/Body/catofpreyarmor</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <statBases>
      <WorkToMake>17000</WorkToMake>
      <MaxHitPoints>180</MaxHitPoints>
      <Mass>6</Mass>
      <StuffEffectMultiplierArmor>0.65</StuffEffectMultiplierArmor>
      <StuffEffectMultiplierInsulation_Cold>0.60</StuffEffectMultiplierInsulation_Cold>
      <StuffEffectMultiplierInsulation_Heat>0.85</StuffEffectMultiplierInsulation_Heat>
      <EquipDelay>5</EquipDelay>
    </statBases>
    <equippedStatOffsets>
      <MoveSpeed>-0.1</MoveSpeed>
    </equippedStatOffsets>
  	<costStuffCount>60</costStuffCount>
  	<stuffCategories>
  		<li>Leathery</li>
  	</stuffCategories>
  	<costList>
      <Steel>100</Steel>
    </costList>
    <thingCategories>
      <li>Apparel</li>
    </thingCategories>
    <apparel>
      <careIfWornByCorpse>false</careIfWornByCorpse>
      <bodyPartGroups>
        <li>Torso</li>
        <li>Neck</li>
      </bodyPartGroups>
      <wornGraphicPath>Things/Pawn/Animal/Apparel/Body/catofpreyarmor</wornGraphicPath>
      <layers>
        <li>OnSkin</li>
      </layers>
      <tags>
        <li>Animal</li>
        <li>Lynx</li>
        <li>Cougar</li>
        <li>Panther</li>
      </tags>
    </apparel>
  	<colorGenerator Class="ColorGenerator_StandardApparel" />
  </ThingDef>

</Defs>
