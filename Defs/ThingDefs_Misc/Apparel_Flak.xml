<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <ThingDef ParentName="ArmorMachineableBase">
    <defName>Apparel_AnimalFlakArmor</defName>
    <label>animal flak armor</label>
    <description>A tough fabric animal jacket with armor plates sewn in. While it's not as good as solid armor, it offers effective protection against all manner of attacks while remaining quite comfortable.</description>
    <techLevel>Industrial</techLevel>
    <recipeMaker>
      <researchPrerequisite>FlakArmor</researchPrerequisite>
      <unfinishedThingDef>UnfinishedTechArmor</unfinishedThingDef>
      <skillRequirements>
        <Crafting>5</Crafting>
      </skillRequirements>
    </recipeMaker>
    <graphicData>
      <texPath>Things/Pawn/Animal/Apparel/Body/flak</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <costList>
      <Cloth>80</Cloth>
      <Steel>130</Steel>
      <ComponentIndustrial>2</ComponentIndustrial>
    </costList>
    <thingCategories>
      <li>Apparel</li>
    </thingCategories>
    <statBases>
      <MaxHitPoints>260</MaxHitPoints>
      <WorkToMake>23000</WorkToMake>
      <Mass>11</Mass> <!-- 4 + 7 -->
      <Flammability>0.6</Flammability>
      <ArmorRating_Sharp>1.40</ArmorRating_Sharp>
      <ArmorRating_Blunt>0.44</ArmorRating_Blunt>
      <ArmorRating_Heat>0.37</ArmorRating_Heat>
      <Insulation_Cold>15.4</Insulation_Cold> <!-- like a cloth jacket -->
      <Insulation_Heat>3</Insulation_Heat>
      <EquipDelay>8</EquipDelay>
    </statBases>
    <equippedStatOffsets>
      <MoveSpeed>-0.24</MoveSpeed>
    </equippedStatOffsets>
    <apparel>
      <careIfWornByCorpse>false</careIfWornByCorpse>
      <bodyPartGroups>
        <li>Torso</li>
        <li>Neck</li>
        <li>Legs</li>
      </bodyPartGroups>
      <wornGraphicPath>Things/Pawn/Animal/Apparel/Body/flak</wornGraphicPath>
      <layers>
        <li>OnSkin</li>
      </layers>
      <tags>
        <li>Animal</li>
        <!-- <li>IndustrialAdvanced</li> -->

        <li>Husky</li>
        <li>LabradorRetriever</li>
        <li>GermanShepherd</li>
        <li>Caucasianshepherd</li>
      </tags>
      <!-- <defaultOutfitTags>
        <li>War Animal</li>
      </defaultOutfitTags> -->
    </apparel>
    <colorGenerator Class="ColorGenerator_Options">
      <options>
        <li>
          <weight>10</weight>
          <only>(0.33,0.33,0.33,1)</only>
        </li>
        <li>
          <weight>10</weight>
          <only>(0.65,0.65,0.65,1)</only>
        </li>
        <li>
          <weight>6</weight>
          <min>(0.3,0.3,0.3,1)</min>
          <max>(0.5,0.5,0.5,1)</max>
        </li>
      </options>
    </colorGenerator>
  </ThingDef>

</Defs>
