<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <ThingDef ParentName="ArmorHelmetMakeableBase">
    <defName>Apparel_wargthorns</defName>
    <label>Warg Armor</label>
    <description>Leather with armor covering the body. Protects against gunfire and melee attacks.</description>
    <techLevel>Medieval</techLevel>
  	<recipeMaker>
  		<researchPrerequisite>Smithing</researchPrerequisite>
  		<recipeUsers>
  			<li>ElectricSmithy</li>
  			<li>FueledSmithy</li>
  		</recipeUsers>
  	</recipeMaker>
    <graphicData>
      <texPath>Things/Pawn/Animal/Apparel/Body/wargthorns</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <statBases>
      <WorkToMake>19000</WorkToMake>
      <MaxHitPoints>250</MaxHitPoints>
      <Mass>5</Mass>
      <StuffEffectMultiplierArmor>0.65</StuffEffectMultiplierArmor>
      <StuffEffectMultiplierInsulation_Cold>0.60</StuffEffectMultiplierInsulation_Cold>
      <StuffEffectMultiplierInsulation_Heat>0.85</StuffEffectMultiplierInsulation_Heat>
      <EquipDelay>5</EquipDelay>
    </statBases>
    <equippedStatOffsets>
      <MoveSpeed>-0.1</MoveSpeed>
    </equippedStatOffsets>
  	<costStuffCount>70</costStuffCount>
  	<stuffCategories>
  		<li>Leathery</li>
  	</stuffCategories>
  	<costList>
        <Steel>140</Steel>
    </costList>
    <thingCategories>
      <li>Apparel</li>
    </thingCategories>
    <apparel>
      <careIfWornByCorpse>false</careIfWornByCorpse>
      <bodyPartGroups>
        <li>Torso</li>
        <li>Neck</li>
        <li>UpperHead</li>
        <li>Legs</li>
      </bodyPartGroups>
      <wornGraphicPath>Things/Pawn/Animal/Apparel/Body/wargthorns</wornGraphicPath>
      <layers>
        <li>OnSkin</li>
      </layers>
      <tags>
        <li>Animal</li>
        <li>Warg</li>
      </tags>
    </apparel>
  	<stuffProps>
      <allowColorGenerators>false</allowColorGenerators>
    </stuffProps>
  	<colorGenerator Class="ColorGenerator_White" />
  </ThingDef>

</Defs>
