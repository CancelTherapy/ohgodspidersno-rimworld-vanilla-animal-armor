<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <ThingDef ParentName="ArmorHelmetMakeableBase">
    <defName>Apparel_ThrumboArmor</defName>
    <label>Thrumbo Armor</label>
    <description>Armor plates covering the body. Protects against gunfire and melee attacks.</description>
    <techLevel>Medieval</techLevel>
	<recipeMaker>
		<researchPrerequisite>PlateArmor</researchPrerequisite>
		<recipeUsers>
			<li>ElectricSmithy</li>
			<li>FueledSmithy</li>
		</recipeUsers>
	</recipeMaker>
    <graphicData>
      <texPath>Things/Pawn/Animal/Apparel/Body/thrumboarmor</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <statBases>
      <WorkToMake>60000</WorkToMake>
      <MaxHitPoints>350</MaxHitPoints>
      <Mass>19</Mass>
      <StuffEffectMultiplierArmor>0.75</StuffEffectMultiplierArmor>
      <StuffEffectMultiplierInsulation_Cold>1.0</StuffEffectMultiplierInsulation_Cold>
      <StuffEffectMultiplierInsulation_Heat>0</StuffEffectMultiplierInsulation_Heat>
      <EquipDelay>17</EquipDelay>
    </statBases>
    <equippedStatOffsets>
      <MoveSpeed>-0.5</MoveSpeed>
    </equippedStatOffsets>
    <costStuffCount>560</costStuffCount>
    <stuffCategories>
      <li>Metallic</li>
    </stuffCategories>
    <thingCategories>
      <li>Apparel</li>
    </thingCategories>
    <apparel>
      <careIfWornByCorpse>false</careIfWornByCorpse>
      <bodyPartGroups>
        <li>Torso</li>
        <li>Neck</li>
        <li>UpperHead</li>
        <li>Legs</li>
      </bodyPartGroups>
      <wornGraphicPath>Things/Pawn/Animal/Apparel/Body/thrumboarmor</wornGraphicPath>
      <layers>
        <li>OnSkin</li>
      </layers>
      <tags>
        <li>Animal</li>
        <li>Thrumbo</li>
      </tags>
    </apparel>
    <colorGenerator Class="ColorGenerator_StandardApparel" />
  </ThingDef>

  <ThingDef ParentName="ArmorHelmetMakeableBase">
    <defName>Apparel_ThrumboGear</defName>
    <label>Thrumbo Gear</label>
    <description>Provides protection and a harness for riding.</description>
    <techLevel>Neolithic</techLevel>
	<recipeMaker>
		<researchPrerequisite>Smithing</researchPrerequisite>
		<recipeUsers>
			<li>ElectricSmithy</li>
			<li>FueledSmithy</li>
		</recipeUsers>
	</recipeMaker>
    <graphicData>
      <texPath>Things/Pawn/Animal/Apparel/Body/thrumbogear</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <statBases>
      <WorkToMake>15000</WorkToMake>
      <MaxHitPoints>110</MaxHitPoints>
      <Mass>0.5</Mass>
      <StuffEffectMultiplierArmor>0.1</StuffEffectMultiplierArmor>
      <StuffEffectMultiplierInsulation_Cold>0.40</StuffEffectMultiplierInsulation_Cold>
      <StuffEffectMultiplierInsulation_Heat>0.55</StuffEffectMultiplierInsulation_Heat>
      <EquipDelay>3</EquipDelay>
    </statBases>
    <costStuffCount>60</costStuffCount>
    <stuffCategories>
      <li>Leathery</li>
    </stuffCategories>
    <thingCategories>
      <li>Apparel</li>
    </thingCategories>
    <apparel>
      <careIfWornByCorpse>false</careIfWornByCorpse>
      <bodyPartGroups>
        <li>Neck</li>
      </bodyPartGroups>
      <wornGraphicPath>Things/Pawn/Animal/Apparel/Body/thrumbogear</wornGraphicPath>
      <layers>
        <li>Shell</li>
      </layers>
      <tags>
        <li>Animal</li>
        <li>Thrumbo</li>
      </tags>
    </apparel>
    <colorGenerator Class="ColorGenerator_StandardApparel" />
  </ThingDef>

</Defs>
