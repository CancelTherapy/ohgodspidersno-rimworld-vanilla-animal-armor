          <li>LabradorRetriever</li>
          <li>Cat</li>
          <li>ACPMunchkinCat</li>
          <li>WildBoar</li>
          <li>Wolf_Arctic</li>
          <li>Wolf_Timber</li>
          <li>Lynx</li>
          <li>Cougar</li>
          <li>Panther</li>
          <li>Warg</li>

          <li>Bear_Polar</li>
          <li>Bear_Grizzly</li>
          <li>Rhinoceros</li>

          <li>Thrumbo</li>
        </tags>
        <!-- <defaultOutfitTags>
          <li>War Animal</li>
        </defaultOutfitTags> -->
      </apparel>
    </ThingDef>
</Defs>
