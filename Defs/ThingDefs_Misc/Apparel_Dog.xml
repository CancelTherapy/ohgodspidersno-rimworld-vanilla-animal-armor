<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <ThingDef ParentName="ApparelMakeableBase">
    <defName>Apparel_DogGambeson</defName>
    <label>Dog gambeson</label>
    <description>A padded jacket protecting in combat and cold weather. (Dogs: Husky)</description>
    <techLevel>Medieval</techLevel>
    <recipeMaker>
      <researchPrerequisite>ComplexClothing</researchPrerequisite>
      <recipeUsers>
        <li>ElectricTailoringBench</li>
        <li>HandTailoringBench</li>
      </recipeUsers>
    </recipeMaker>
    <graphicData>
      <texPath>Things/Pawn/Animal/Apparel/Body/doggambeson</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <statBases>
      <WorkToMake>17000</WorkToMake>
      <MaxHitPoints>160</MaxHitPoints>
      <Mass>3</Mass>
      <StuffEffectMultiplierArmor>0.65</StuffEffectMultiplierArmor>
      <StuffEffectMultiplierInsulation_Cold>0.85</StuffEffectMultiplierInsulation_Cold>
      <StuffEffectMultiplierInsulation_Heat>0.08</StuffEffectMultiplierInsulation_Heat>
      <EquipDelay>9</EquipDelay>
    </statBases>
    <equippedStatOffsets>
      <MoveSpeed>-0.04</MoveSpeed>
    </equippedStatOffsets>
    <costStuffCount>80</costStuffCount>
    <costList>
      <Steel>10</Steel>
    </costList>
    <stuffCategories>
      <li>Fabric</li>
    </stuffCategories>
    <thingCategories>
      <li>Apparel</li>
    </thingCategories>
    <apparel>
      <careIfWornByCorpse>false</careIfWornByCorpse>
      <bodyPartGroups>
        <li>Torso</li>
      </bodyPartGroups>
      <wornGraphicPath>Things/Pawn/Animal/Apparel/Body/doggambeson</wornGraphicPath>
      <layers>
        <li>OnSkin</li>
      </layers>
      <tags>
        <li>Animal</li>
        <li>AnimalCUTOUTCOMPLEX</li>
        <li>Husky</li>
        <li>LabradorRetriever</li>
      </tags>
    </apparel>
    <colorGenerator Class="ColorGenerator_StandardApparel" />
  </ThingDef>

  <ThingDef ParentName="ApparelMakeableBase">
    <defName>Apparel_DogScarf</defName>
    <label>Dog Scarf</label>
    <description>A stylish accessory for dogs. (Dogs: Yorkshire Terrier, Husky, Labrador Retriever, Arctic/Timber Wolf, Warg)</description>
    <techLevel>Neolithic</techLevel>
    <recipeMaker>
      <researchPrerequisite />
      <recipeUsers>
        <li>ElectricTailoringBench</li>
        <li>HandTailoringBench</li>
        <li>CraftingSpot</li>
      </recipeUsers>
    </recipeMaker>
    <graphicData>
      <texPath>Things/Pawn/Animal/Apparel/Neck/dogscarf</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <statBases>
      <WorkToMake>5000</WorkToMake>
      <MaxHitPoints>50</MaxHitPoints>
      <MarketValue>50</MarketValue>
      <Mass>0.1</Mass>
      <Flammability>0.9</Flammability>
      <ArmorRating_Blunt>0.03</ArmorRating_Blunt>
      <ArmorRating_Sharp>0.03</ArmorRating_Sharp>
      <ArmorRating_Heat>0.01</ArmorRating_Heat>
      <StuffEffectMultiplierInsulation_Cold>0.10</StuffEffectMultiplierInsulation_Cold>
      <StuffEffectMultiplierInsulation_Heat>0.25</StuffEffectMultiplierInsulation_Heat>
      <EquipDelay>1</EquipDelay>
    </statBases>
    <costStuffCount>50</costStuffCount>
    <stuffCategories>
      <li>Fabric</li>
      <li>Leathery</li>
    </stuffCategories>
    <thingCategories>
      <li>Apparel</li>
    </thingCategories>
    <apparel>
      <careIfWornByCorpse>false</careIfWornByCorpse>
      <bodyPartGroups>
        <li>Neck</li>
      </bodyPartGroups>
      <wornGraphicPath>Things/Pawn/Animal/Apparel/Neck/dogscarf</wornGraphicPath>
      <layers>
        <li>Shell</li>
      </layers>
      <tags>
        <li>Animal</li>
        <li>YorkshireTerrier</li>
        <li>Husky</li>
        <li>LabradorRetriever</li>
        <li>Wolf_Arctic</li>
        <li>Wolf_Timber</li>
        <li>Warg</li>
        <li>GermanShepherd</li>
        <li>Caucasianshepherd</li>
      </tags>
    </apparel>
    <colorGenerator Class="ColorGenerator_StandardApparel" />
  </ThingDef>

  <ThingDef ParentName="ArmorMachineableBase">
    <defName>Apparel_DogArmorVest</defName>
