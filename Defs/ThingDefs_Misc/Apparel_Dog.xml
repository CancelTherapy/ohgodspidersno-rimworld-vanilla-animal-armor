    <thingCategories>
      <li>Apparel</li>
    </thingCategories>
    <costList>
      <Steel>120</Steel>
      <ComponentIndustrial>2</ComponentIndustrial>
    </costList>
    <apparel>
      <careIfWornByCorpse>false</careIfWornByCorpse>
      <bodyPartGroups>
        <li>Torso</li>
      </bodyPartGroups>
      <wornGraphicPath>Things/Pawn/Animal/Apparel/Body/dogarmorvest</wornGraphicPath>
      <layers>
        <li>OnSkin</li>
      </layers>
      <tags>
        <li>Animal</li>
        <li>Husky</li>
        <li>LabradorRetriever</li>
        <li>GermanShepherd</li>
        <li>Caucasianshepherd</li>
      </tags>
    </apparel>
    <colorGenerator Class="ColorGenerator_Options">
      <options>
        <li>
          <weight>10</weight>
          <only>(0.33,0.33,0.33,1)</only>
